{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build desktop version",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceRoot}/build/desktop"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build web version",
            "command": "emmake",
            "args": [
                "make"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build/web"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "run desktop version",
            "command": "./build/desktop/mumax-view",
            "args": [],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "dependsOn": [
                "build desktop version"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "run web version",
            "command": "firefox",
            "args": [
                "./build/web/index.html"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "dependsOn": [
                "build web version"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "upload web version to dynamag",
            "command": "scp",
            "args": [
                "./build/web/mumax-view.wasm",
                "./build/web/mumax-view.js",
                "./build/web/index.html",
                "jeroen@dynamag:/srv/www/mumax-view"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "dependsOn": [
                "build web version"
            ],
            "problemMatcher": []
        }
    ]
}