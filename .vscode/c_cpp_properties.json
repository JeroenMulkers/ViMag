{
    "env": {
        "myDefaultIncludePath": [
            "${workspaceFolder}",
            "/usr/include"
        ],
        "myCompilerPath": "/usr/local/llvm/bin/clang++"
    },
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${myDefaultIncludePath}"
            ],
            "forcedInclude": [],
            "compilerPath": "/usr/local/llvm/bin/clang++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ],
    "version": 4
}